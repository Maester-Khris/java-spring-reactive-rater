<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <property name="LOG_PATH" value="${LOG_PATH:-/home/nklinux/Documents/workspace/projects/skillrater/logs}"/>
    <property name="APP_NAME" value="${spring.application.name:-skillrater}"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>[${APP_NAME}] %level | %d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %logger{36}:%line | %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[${APP_NAME}] %level | %d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %logger{36}:%line | %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

    <logger name="org.springframework.web" level="INFO"/>
    <logger name="reactor" level="WARN"/>
    <logger name="nk.springprojects.reactive" level="DEBUG"/>

</configuration>